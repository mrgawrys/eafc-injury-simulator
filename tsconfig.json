{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "paths": {
      "@spartan-ng/helm/*": ["./src/app/components/ui/*"],
      "@spartan-ng/helm/button": ["./src/app/components/ui/button/src/index.ts"],
      "@spartan-ng/helm/utils": ["./src/app/components/ui/utils/src/index.ts"],
      "@spartan-ng/helm/table": ["./src/app/components/ui/table/src/index.ts"],
      "@spartan-ng/helm/dialog": ["./src/app/components/ui/dialog/src/index.ts"],
      "@spartan-ng/helm/icon": ["./src/app/components/ui/icon/src/index.ts"],
      "@spartan-ng/helm/input": ["./src/app/components/ui/input/src/index.ts"],
      "@spartan-ng/helm/select": ["./src/app/components/ui/select/src/index.ts"],
      "@spartan-ng/helm/badge": ["./src/app/components/ui/badge/src/index.ts"],
      "@spartan-ng/helm/card": ["./src/app/components/ui/card/src/index.ts"],
      "@spartan-ng/helm/label": ["./src/app/components/ui/label/src/index.ts"],
      "@spartan-ng/helm/separator": ["./src/app/components/ui/separator/src/index.ts"],
      "@spartan-ng/helm/scroll-area": ["./src/app/components/ui/scroll-area/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
